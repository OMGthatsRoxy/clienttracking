          {/* æ·»åŠ æŒ‰é’® - ç»å¯¹å®šä½åœ¨å³ä¾§ */}
          <button 
            onClick={() => setShowNewClientForm(true)}
            style={{ 
              position: "absolute",
              right: 0,
              ...styles.primaryButton
            }}
            onMouseEnter={(e) => {
              e.currentTarget.style.background = '#3b82f6';
            }}
            onMouseLeave={(e) => {
              e.currentTarget.style.background = '#60a5fa';
            }}
          >
            +{t('client')}
          </button>
        </div>

        <div style={{ 
          flex: 1,
          overflowY: "auto", // ä»…åœ¨å†…å®¹è¶…å‡ºæ—¶æ˜¾ç¤ºå‚ç›´æ»šåŠ¨
          overflowX: "hidden" // éšè—æ°´å¹³æ»šåŠ¨
        }}>
          {clients.length === 0 ? (
            <div style={{ 
              color: '#a1a1aa', 
              textAlign: 'center', 
              padding: '24px', // å‡å°‘å†…è¾¹è·
              fontSize: "clamp(14px, 3vw, 16px)" // å“åº”å¼å­—ä½“
            }}>{t('noClients')}</div>
          ) : (
            <>
              <div style={{ 
                display: 'grid', 
                gridTemplateColumns: 'repeat(2, 1fr)', // å›ºå®šä¸ºä¸¤åˆ—
                gap: 8, // å‡å°‘é—´è·
                padding: 0 
              }}>
                {clients
                  .slice((currentPage - 1) * clientsPerPage, currentPage * clientsPerPage)
                  .map(client => (
                <div key={client.id} className="form-card list-item" style={{ 
                  marginBottom: 0,
                  cursor: 'pointer',
                  transition: 'all 0.2s ease',
                  border: '1px solid #333',
                  padding: '12px', // å‡å°‘å†…è¾¹è·
                  minHeight: '70px', // å‡å°æœ€å°é«˜åº¦
                  display: 'flex',
                  flexDirection: 'column',
                  justifyContent: 'center',
                  borderRadius: 8 // å‡å°åœ†è§’
                }}
                onClick={() => window.location.href = `/client/${client.id}`}
                onMouseEnter={(e) => {
                  e.currentTarget.style.borderColor = '#60a5fa';
                  e.currentTarget.style.transform = 'translateY(-2px)';
                  e.currentTarget.style.boxShadow = '0 4px 12px rgba(96, 165, 250, 0.2)';
                }}
                onMouseLeave={(e) => {
                  e.currentTarget.style.borderColor = '#333';
                  e.currentTarget.style.transform = 'translateY(0)';
                  e.currentTarget.style.boxShadow = 'none';
                }}
                >
                  <div style={{ 
                    fontWeight: 600, 
                    fontSize: "clamp(14px, 3vw, 16px)", // å“åº”å¼å­—ä½“
                    marginBottom: 6, // å‡å°‘åº•éƒ¨é—´è·
                    color: '#fff' 
                  }}>{client.name}</div>
                  <div style={{ 
                    color: '#a1a1aa', 
                    fontSize: "clamp(11px, 2.5vw, 12px)" // å“åº”å¼å­—ä½“
                  }}>
                    <span style={{ marginRight: 4 }}>ğŸ“</span>
                    {client.phone}
                  </div>
                  {client.email && (
                    <div style={{ 
                      color: '#a1a1aa', 
                      fontSize: "clamp(11px, 2.5vw, 12px)", // å“åº”å¼å­—ä½“
                      marginTop: 2 
                    }}>
                      <span style={{ marginRight: 4 }}>âœ‰ï¸</span>
                      {client.email}
                    </div>
                  )}
                </div>
              ))}
              </div>
              
              {/* åˆ†é¡µæ§ä»¶ */}
              {clients.length > clientsPerPage && (
                <div className="pagination" style={{ 
                  display: 'flex', 
                  justifyContent: 'center', 
                  alignItems: 'center', 
                  gap: 8, // å‡å°‘é—´è·
                  marginTop: 16, // å‡å°‘é¡¶éƒ¨é—´è·
                  flexShrink: 0 // é˜²æ­¢å‹ç¼©
                }}>
                  <button
                    onClick={() => setCurrentPage(Math.max(1, currentPage - 1))}
                    disabled={currentPage === 1}
                    style={{
                      background: currentPage === 1 ? '#23232a' : '#60a5fa',
                      color: currentPage === 1 ? '#666' : '#18181b',
                      border: 'none',
                      borderRadius: 6,
                      padding: '6px 12px', // å‡å°‘å†…è¾¹è·
                      cursor: currentPage === 1 ? 'not-allowed' : 'pointer',
                      fontSize: "clamp(11px, 2.5vw, 14px)", // å“åº”å¼å­—ä½“
                      fontWeight: 600
                    }}
                  >
                    {t('previous')}
                  </button>
                  
                  <span style={{ 
                    color: '#a1a1aa', 
                    fontSize: "clamp(12px, 2.5vw, 14px)" // å“åº”å¼å­—ä½“
                  }}>
                    {currentPage} / {Math.ceil(clients.length / clientsPerPage)}
                  </span>
                  
                  <button
                    onClick={() => setCurrentPage(Math.min(Math.ceil(clients.length / clientsPerPage), currentPage + 1))}
                    disabled={currentPage === Math.ceil(clients.length / clientsPerPage)}
                    style={{
                      background: currentPage === Math.ceil(clients.length / clientsPerPage) ? '#23232a' : '#60a5fa',
                      color: currentPage === Math.ceil(clients.length / clientsPerPage) ? '#666' : '#18181b',
                      border: 'none',
                      borderRadius: 6,
                      padding: '6px 12px', // å‡å°‘å†…è¾¹è·
                      cursor: currentPage === Math.ceil(clients.length / clientsPerPage) ? 'not-allowed' : 'pointer',
                      fontSize: "clamp(11px, 2.5vw, 14px)", // å“åº”å¼å­—ä½“
                      fontWeight: 600
                    }}
                  >
                    {t('next')}
                  </button>
                </div>
              )}
            </>
          )}
        </div>

        {/* æ–°å¢å®¢æˆ·å¼¹çª— */}
        {showNewClientForm && (
          <div 
            style={{
              position: 'fixed',
              top: 0,
              left: 0,
              right: 0,
              bottom: 0,
              background: 'rgba(0, 0, 0, 0.8)',
              display: 'flex',
              alignItems: 'center',
              justifyContent: 'center',
              zIndex: 1000,
              padding: '12px', // å‡å°‘å†…è¾¹è·
              animation: 'fadeIn 0.2s ease-out'
            }}
            onClick={(e) => {
              if (e.target === e.currentTarget) {
                setShowNewClientForm(false);
              }
            }}
          >
            <div className="modal-content" style={{
              background: '#18181b',
              borderRadius: 8, // å‡å°åœ†è§’
              padding: 16, // å‡å°‘å†…è¾¹è·
              maxWidth: 600,
              width: '100%',
              maxHeight: '85vh', // å‡å°‘æœ€å¤§é«˜åº¦
              overflow: 'auto',
              border: '1px solid #333',
              position: 'relative',
              animation: 'slideIn 0.3s ease-out'
            }}>
              <div style={{
                display: 'flex',
                justifyContent: 'space-between',
                alignItems: 'center',
                marginBottom: 16 // å‡å°‘åº•éƒ¨é—´è·
              }}>
                <h2 style={{ 
                  color: '#fff', 
                  fontSize: "clamp(16px, 3vw, 20px)", // å“åº”å¼å­—ä½“
                  fontWeight: 600, 
                  margin: 0 
                }}>
                  {t('newClient')}
                </h2>
                <button
                  onClick={() => setShowNewClientForm(false)}
                  style={{
                    background: 'none',
                    border: 'none',
                    color: '#a1a1aa',
                    fontSize: 20, // å‡å°å­—ä½“
                    cursor: 'pointer',
                    padding: 0,
                    width: 24, // å‡å°å°ºå¯¸
                    height: 24,
                    display: 'flex',
                    alignItems: 'center',
                    justifyContent: 'center'
                  }}
                >
                  Ã—
                </button>
              </div>
              <ClientForm 
                onSuccess={() => {
                  setShowNewClientForm(false);
                  // åˆ·æ–°å®¢æˆ·åˆ—è¡¨
                  window.location.reload();
                }} 
              />
            </div>
          </div>
        )}
      </div>
    </main>
    </>
  );
} 