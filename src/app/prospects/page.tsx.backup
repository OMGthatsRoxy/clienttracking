"use client";

import { useState, useEffect } from "react";
import { useAuth } from "@/features/auth/AuthProvider";
import { useLanguage } from "@/features/language/LanguageProvider";
import ProspectList from "@/features/prospects/ProspectList";
import ProspectForm from "@/features/prospects/ProspectForm";
import { getResponsiveStyles } from "@/lib/styles";

// 模态框组件
const Modal = ({ isOpen, onClose, children }: { isOpen: boolean; onClose: () => void; children: React.ReactNode }) => {
  if (!isOpen) return null;

  return (
    <div style={{
      position: 'fixed',
      top: 0,
      left: 0,
      right: 0,
      bottom: 0,
      backgroundColor: 'rgba(0, 0, 0, 0.7)',
      display: 'flex',
      alignItems: 'center',
      justifyContent: 'center',
      zIndex: 1000,
      padding: '16px'
    }} onClick={onClose}>
      <div style={{
        background: '#23232a',
        borderRadius: '12px',
        padding: '24px',
        maxWidth: '500px',
        width: '100%',
        maxHeight: '90vh',
        overflow: 'auto',
        position: 'relative'
      }} onClick={(e) => e.stopPropagation()}>
        <button
          onClick={onClose}
          style={{
            position: 'absolute',
            top: '16px',
            right: '16px',
            background: 'none',
            border: 'none',
            color: '#a1a1aa',
            fontSize: '24px',
            cursor: 'pointer',
            width: '32px',
            height: '32px',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            borderRadius: '50%',
            transition: 'background-color 0.2s'
          }}
          onMouseEnter={(e) => {
            e.currentTarget.style.backgroundColor = '#333';
          }}
          onMouseLeave={(e) => {
            e.currentTarget.style.backgroundColor = 'transparent';
          }}
        >
          ×
        </button>
        {children}
      </div>
    </div>
  );
};

export default function ProspectsPage() {
  const { user } = useAuth();
  const { t } = useLanguage();
  const [showModal, setShowModal] = useState(false);
  const [isMobile, setIsMobile] = useState(false);

  const styles = getResponsiveStyles(isMobile);

  useEffect(() => {
    // 检测是否为移动设备
    const checkMobile = () => {
      const userAgent = navigator.userAgent.toLowerCase();
      const isMobileDevice = /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini/i.test(userAgent);
      setIsMobile(isMobileDevice);
    };

    checkMobile();
    window.addEventListener('resize', checkMobile);

    return () => {
      window.removeEventListener('resize', checkMobile);
    };
  }, []);

  if (!user) {
    return (
      <main style={{
        minHeight: "100vh",
        display: "flex",
        alignItems: "center",
        justifyContent: "center",
        background: "#18181b"
      }}>
        <div style={{ color: '#a1a1aa' }}>{t('login')}</div>
      </main>
    );
  }

  return (
    <main className="page-content" style={styles.pageContainer}>
      <div style={styles.contentContainer}>
        {/* 页面头部 - 标题居中 */}
        <div style={styles.titleSection}>
          <div style={{ textAlign: "center" }}>
            <h1 style={styles.mainTitle}>{t('prospectManagement')}</h1>
            <p style={styles.subtitle}>{t('prospectManagementDescription')}</p>
          </div>
          
          {/* 添加按钮 - 绝对定位在右侧 */}
          <button
            onClick={() => setShowModal(true)}
            style={{
              position: "absolute",
              right: 0,
              ...styles.primaryButton
            }}
            onMouseEnter={(e) => {
              e.currentTarget.style.background = '#3b82f6';
            }}
            onMouseLeave={(e) => {
              e.currentTarget.style.background = '#60a5fa';
            }}
          >
            +{t('prospect')}
          </button>
        </div>

        {/* 潜在顾客列表 */}
        <ProspectList />

        {/* 添加潜在客户模态框 */}
        <Modal isOpen={showModal} onClose={() => setShowModal(false)}>
          <ProspectForm onSuccess={() => setShowModal(false)} />
        </Modal>
      </div>
    </main>
  );
} 